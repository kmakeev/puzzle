<PuzzleApp>
	id: myApp
#	title: 'My Application 15'
	
<PuzzleLayout>
	id: layout
	
	CheckBox:
		id: isCheckBox
		pos_hint: {'x':0.77, 'y': 0.75}
		size_hint: (0.2, 0.1)
		active: True
	Label:
		text: 'Train'
		font_size: 20
		size_hint: (0.2, 0.1)
		pos_hint: {'x':0.82, 'y': 0.75} 
		
	Slider:
		id: slider
		min: 4
		max: 49
		value: 16
		step: 1
		size_hint: (0.2, 0.1)
		pos_hint: {'x':0.77, 'y': 0.65}
		on_value: app.change_scale(slider.value)
		
	Button:
		text: 'Play'
		size_hint: (0.2, 0.1)
		pos_hint: {'x':0.77, 'y': 0.5} 
		font_size: self.height - 10
		on_press: app.playOnEvr()
	Button:
		text: 'Stop'
		size_hint: (0.2, 0.1)
		pos_hint: {'x':0.77, 'y': 0.39} 
		font_size: self.height - 10
		on_press: app.stopPlayEvr()
	Button:
		text: 'II Play '
		size_hint: (0.2, 0.1)
		pos_hint: {'x':0.77, 'y': 0.28} 
		font_size: self.height - 10
		on_press: app.playOnII()
	Button:
		text: 'Stop II'
		size_hint: (0.2, 0.1)
		pos_hint: {'x':0.77, 'y': 0.17} 
		font_size: self.height - 10
		on_press: app.stopPlayII()	
	Label:
		text: 'Step - ' + str(layout.step)
		font_size: 24
		size_hint: (0.2, 0.1)
		pos_hint: {'x':0.77, 'y': 0.9} 
		


<PuzzleGrid>
	id: grid
#	cols: layout.
	size_hint: (0.75, 0.8)
	pos_hint: {'x':0, 'y': 0.1} 

<GridEntry>:
	id: element
	font_size: self.height-5
#	font_size: 24
#	text: element.str_value(element.num) + str(element.position)
	text: element.str_value(element.num)
		
	
	
	



		